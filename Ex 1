num1 = int (input ("Insert first number: "))
num2 = int (input ("Insert second number: "))

print ("The sum of both numbers are:")
print (num1+num2)

print ("While multiplying both numbers are:")
print (num1*num2)

print ("Oh.. deviding both will be:")
print (num1/num2)

if num1 == num2:
    print ("Both numbers are equal")
    
elif num1 > num2:
        print ("First number is definetly greater than first number")

else:
    print ("Second number is greater than first number")
